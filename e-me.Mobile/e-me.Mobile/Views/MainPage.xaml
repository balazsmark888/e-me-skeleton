<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="e_me.Mobile.Views.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{StaticResource AppBackgroundColor}"
    Shell.NavBarIsVisible="False">

    <Frame
        BorderColor="{StaticResource FrameBorderColor}"
        HorizontalOptions="Center"
        VerticalOptions="CenterAndExpand"
        WidthRequest="250">
        <StackLayout>
            <Label Text="{Binding Hello}" />
            <Button
                BackgroundColor="{StaticResource LoginButtonColor}"
                Clicked="LoginButton_OnClicked"
                Text="Login" />
            <Button
                BackgroundColor="{StaticResource RegisterButtonColor}"
                Clicked="RegisterButton_OnClicked"
                Text="Register" />
        </StackLayout>
    </Frame>


</ContentPage>
